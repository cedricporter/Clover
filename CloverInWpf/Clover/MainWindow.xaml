<Window x:Class="Clover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:OgreLib="clr-namespace:OgreLib;assembly=OgreLib"
        Title="MainWindow" Height="350" Width="525"
        Initialized="Window_Initialized">
    <Grid>
        <Image x:Name="RenderTargetControl" Stretch="Fill" SizeChanged="RenderTargetControl_SizeChanged" MouseDown="RenderTargetControl_MouseDown">
            <Image.Source>
                <OgreLib:OgreImage x:Name="OgreRenderTarget" Initialised="Ogre_InitScene" PreRender="Ogre_PreRender"
                                   ResourceLoadItemProgress="Ogre_ResourceLoadItemProgress"/>
            </Image.Source>
        </Image>
        
    </Grid>
</Window>
